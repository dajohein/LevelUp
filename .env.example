# LevelUp Environment Variables

# Development Mode
# Set to 'development' for dev features, 'production' for production builds
NODE_ENV=development

# API Configuration (Optional - for future backend integration)
# VITE_API_URL=http://localhost:3001
# VITE_API_KEY=your-api-key-here

# Storage Configuration
# Enable remote storage sync (when implemented)
# VITE_ENABLE_REMOTE_STORAGE=false

# Env-first Configuration (Frontend)
# Base URL for API calls (defaults to window.origin if unset)
VITE_API_BASE_URL=http://localhost:5173
# Remote storage and fallback controls
VITE_ENABLE_REMOTE_STORAGE=true
VITE_ENABLE_LOCAL_FALLBACK=true
# Debug mode toggles verbose logging in frontend
VITE_DEBUG_MODE=false

# Storage endpoints (path or full URL)
VITE_STORAGE_ENDPOINT_STORAGE=/api/storage
VITE_STORAGE_ENDPOINT_USERS=/api/users

# Cache busting toggles
VITE_CACHE_ENABLED=false
VITE_CACHE_AUTO_CLEAN_ON_START=false
VITE_CACHE_CLEAR_SW=false
VITE_CACHE_CLEAR_APP=false
VITE_CACHE_CLEAR_STORAGE=false
VITE_CACHE_ADD_TIMESTAMP=false
VITE_CACHE_LOG_OPERATIONS=false

# Feature Flags
# Enable advanced AI features
# VITE_ENABLE_AI_FEATURES=true

# Analytics (Optional)
# VITE_ANALYTICS_ID=your-analytics-id

# Debug Settings
# Enable performance tracking in development
# VITE_ENABLE_PERFORMANCE_TRACKING=false

# PWA Configuration
# VITE_PWA_CACHE_VERSION=v1

# Note: Variables prefixed with VITE_ are exposed to the client
# Never commit sensitive keys or secrets to version control

# Serverless API (Backend) Environment Variables
# Configure in Vercel Project Settings for production
CORS_ALLOWED_ORIGINS=*
SESSION_TOKEN_TTL_MS=86400000
RATE_LIMIT_MAX_ATTEMPTS=10
RATE_LIMIT_WINDOW_MS=3600000
ACCOUNT_CODE_MAX_ATTEMPTS=5
ACCOUNT_CODE_EXPIRY_MS=3600000
# DATABASE_URL=postgres://user:pass@host:5432/dbname
# STORAGE_COMPRESS_DEFAULT=false
